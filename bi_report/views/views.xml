<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="bi_report.list">
      <field name="name">bi_report list</field>
      <field name="model">bi.report</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="name1"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="bi_report.action_window">
      <field name="name">Report Window</field>
      <field name="res_model">bi.report</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="bi_report.action_server">
      <field name="name">bi_report server</field>
      <field name="model_id" ref="model_bi_report"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Report" id="bi_report.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="bi_report.menu_1" parent="bi_report.menu_root"/>
    <menuitem name="Menu 2" id="bi_report.menu_2" parent="bi_report.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="bi_report.menu_1_list" parent="bi_report.menu_1"
              action="bi_report.action_window"/>
    <menuitem name="Server to list" id="bi_report" parent="bi_report.menu_2"
              action="bi_report.action_server"/>

  </data>
</odoo>