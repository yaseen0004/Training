<odoo>
  <data>
  
<!-- Sequence No -->
    <record id="bi_awards" model="ir.sequence">
      <field name="name">Transfer</field>
      <field name="code">bi.stock.tracking</field>
      <field name="prefix">IT</field>
      <field name="padding">3</field>
    </record>

    <record id="view_test_report_form" model="ir.ui.view">
      <field name="name">stock_test1</field>
      <field name="model">bi.stock.tracking</field>
      <field name="arch" type="xml">
        <form string="Choose The Details">
          <header> 
            <field name="state" widget="statusbar" statusbar_visible="draft,reserved,transfered" />
            <button string="Reserve To Transit" name="reserve" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('reserved','transfered'))]}"/>
            <button string="Tansfer To Destination" name="validate" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ('draft','transfered'))]}"/>
          </header>
          <sheet>
            <group>
              <field name="name" />
            </group>
            <group>
              <group>
                <field name="picking_from_id"/>
                <field name="transit_id"/>
                <field name="dest_location_id"/>
              </group>
              <group>
                <field name="scheduled_date"/>
              </group>
            </group>
            <group> 
              <group>
                <field name="product_id"/>
                <field name="qty_reserve"/>
                <field name="qty_demand"/>
                <field name="product_uom_id" />
              </group>
              <group>
                <field name="operation_type_id"/>
                <field name="move_type" />
                <field name="company_id" />
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record> 

    <record id="view_test_report_id_tree" model="ir.ui.view">
      <field name="name">stock_test</field>
      <field name="model">bi.stock.tracking</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="picking_from_id"/>
          <field name="transit_id"/>
          <field name="dest_location_id"/>
          <field name="operation_type_id"/>
          <field name="scheduled_date"/>
          <field name="product_id"/>
          <!-- <field name="qty_reserve"/> -->
          <!-- <field name="qty_demand"/> -->
          <!-- <field name="move_type" /> -->
          <field name="company_id" />
        </tree>
      </field>
    </record> 

    <record id="view_test_report_action" model='ir.actions.act_window'>
        <field name="name">Transfer</field>
        <field name="res_model">bi.stock.tracking</field>
        <field name="view_mode">tree,form</field>  
    </record>

    <menuitem
      id="b2_test_root_menu"
      name="Stock Transfer"
      action="view_test_report_action"
      sequence="10"/>

  </data>
</odoo>