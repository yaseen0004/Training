    <record id="partner_kanban_view" model="ir.ui.view">            
      <field name="name">res.partner.kanban</field>            
      <field name="model">res.partners</field>            
      <field name="arch" type="xml">                
        <kanban class="o_res_partner_kanban">                    
          <field name="id"/>                    
          <field name="display_name"/>	        
          <field name="email"/>                    
          <field name="mobile"/>
          <field name="image1"/>                     
          <templates>                        
            <t t-name="kanban-box">                            
            <div t-attf-class="oe_kanban_global_click">                                
            <div class="o_kanban_image">                                    
            <img alt="Avatar" t-att-src="kanban_image('res.partners', 'image1',record.id.raw_value)"/>                                
            </div>                                
            <div class="oe_kanban_details">                                    
            <strong class="o_kanban_record_title">                                    
            <field name="display_name"/>                                    
            </strong>                                
            <div t-if="record.mobile.value">                                        
            <t t-esc="record.mobile.value"/>                                
            </div>                                    
            <div t-if="record.email.value">                                        
            <t t-esc="record.email.value"/>                                
            </div>
            <div t-if="record.image1.value">                                        
            <t t-esc="record.image1.value"/>                                
            </div>                                
            </div>                            
            </div>                        
            </t>                    
          </templates>                
        </kanban>            
    </field>        
    </record>

    <record id="res_partners_action" model="ir.actions.act_window">
      <field name="name">Action Name</field>
      <field name="res_model">res.partners</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem
      id="res_partners_roor"
      name="Kanban"
      sequence="10"/>

      <menuitem
        id="res_partners_sub"
        name="Kanban"
        action="res_partners_action"
        parent="res_partners_roor"
        sequence="10"/>>


  </data>
</odoo>